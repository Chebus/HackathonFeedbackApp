@model ReviewViewModel

<form asp-controller="Review" asp-action="Add" method="post">
    <div>
        <div class="form-group">
            @Html.LabelFor(x => x.RatingId)
            @Html.DropDownListFor(x => x.RatingId, Model.RatingTypes, "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.RatingId)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Comment)
            @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", cols = "10", rows = "5" })
            @Html.ValidationMessageFor(x => x.Comment)
        </div>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
